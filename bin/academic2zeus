#!/bin/bash

SOURCE=${HOME}/Sites/hugo-academic/
DEST=${HOME}/mnt/zeus/jun/public_html/hugo

hugo -s ${SOURCE}\
	-b /~jun/ \
	-d  ${DEST}\
	--cleanDestinationDir

(cd ${DEST}; ln -sf ../custom/download .)

#			-b http://bcl.sci.yamaguchi-u.ac.jp/~jun/ \
#		-b http://ds0n.cc.yamaguchi-u.ac.jp/~nishii/ \